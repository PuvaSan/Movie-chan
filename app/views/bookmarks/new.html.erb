<div class="container bookmark-form">
  <h1 class="mt-3">Add a Movie or a TV Show to <%= @list.name %></h1>
  <div class="form">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.submit "Add Movie", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
